<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.NoActionBar.Translucent" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Dashboard" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/toolbar_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay.ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:actionMenuTextColor">@color/generic_text_color</item>
        <item name="colorControlNormal">@color/accent_blue</item>
        <item name="android:textColorPrimary">@color/generic_text_color</item>
        <item name="android:textColorSecondary">@color/primary_light</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="actionMenuTextColor">@color/generic_text_color</item>

    </style>


</resources>