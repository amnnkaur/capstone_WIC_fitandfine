<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_between_field"
    android:paddingRight="@dimen/margin_between_field">

    <com.lambton.capstone_wic_fitandfine.view.CustomFontTextView
        style="@style/textView"
        android:layout_marginLeft="@dimen/margin_between_field"
        android:id="@+id/activity_personality_insights_title"
        android:layout_marginTop="@dimen/margin_between_field"
        android:layout_alignParentLeft="true"
        android:text="@string/activity_personality_insight_title"
        android:textSize="@dimen/font_subheading"
        app:text_font="@string/font_lato_regular" />

    <include
        android:id="@+id/layout_bottom_customer_care"
        layout="@layout/layout_bottom_customer_care_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <View
        android:id="@+id/bottom_horizontal_separator"
        style="@style/horizontal_separator.lightGray"
        android:layout_above="@id/layout_bottom_customer_care"
        android:layout_marginBottom="@dimen/margin_between_field" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_personality_insights_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_horizontal_separator"
        android:layout_below="@id/activity_personality_insights_title"
        android:layout_marginLeft="@dimen/margin_extra_small"
        android:layout_marginRight="@dimen/margin_extra_small"
        android:layout_marginTop="@dimen/margin_big" />


</RelativeLayout>