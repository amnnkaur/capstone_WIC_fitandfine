<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:id="@+id/Linear_levels">

        <ImageView
            android:id="@+id/levels_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/levels"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/generic_text_color"
            android:layout_below="@+id/levels_image"
            android:layout_marginBottom="16dp"
            android:textSize="20sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/activity_levels"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:textColor="@color/generic_text_color"
        android:layout_toRightOf="@+id/Linear_levels"
        android:layout_toEndOf="@id/Linear_levels"
        android:textSize="18sp"
        tools:ignore="RelativeOverlap,RtlHardcoded" />

    <TextView
        android:id="@+id/levels_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:textColor="@color/about_text_color"
        android:layout_alignLeft="@+id/activity_levels"
        android:layout_alignStart="@+id/activity_levels"
        android:layout_below="@+id/activity_levels"
        android:layout_marginBottom="16dp"
        android:textSize="16sp" />


</RelativeLayout>


