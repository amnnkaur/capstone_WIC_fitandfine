<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_log_pain"
        style="@style/top_toolbar_small"
        app:contentInsetStart="0dp">

        <TextView
            style="@style/textView"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text="@string/log_pain"
            android:textSize="@dimen/font_extra_big" />

        <TextView
            android:id="@+id/textview_log_pain_cancel"
            style="@style/textView"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/margin_between_field"
            android:text="@string/all_cancel"
            android:textColor="@color/accent_blue"
            android:textSize="@dimen/font_extra_big" />

        <TextView
            android:id="@+id/textview_log_pain_done"
            style="@style/textView"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/margin_between_field"
            android:text="@string/all_done"
            android:textAppearance="@style/bold_textview_small"
            android:textColor="@color/accent_blue"
            android:textSize="@dimen/font_extra_big" />

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageview_log_pain_divider"
        style="@style/imageView.divider"
        android:layout_below="@id/toolbar_log_pain" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/imageview_log_pain_divider">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_log_pain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

            </android.support.v7.widget.RecyclerView>

            <ImageView style="@style/imageView.divider" />

            <RelativeLayout
                android:id="@+id/relativelayout_log_pain_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small">

                <TextView
                    style="@style/textView"
                    android:layout_alignParentLeft="true"
                    android:text="@string/all_date"
                    android:textSize="@dimen/font_extra_big" />

                <TextView
                    android:id="@+id/textview_log_pain_date"
                    style="@style/textView.light_gray"
                    android:layout_alignParentRight="true"
                    android:text="01/30/2018"
                    android:textSize="@dimen/font_extra_big" />

                <DatePicker
                    android:id="@+id/datepicker_log_pain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_log_pain_date"
                    android:layout_centerHorizontal="true"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView style="@style/imageView.divider" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_extra_big"
                android:background="@color/light_gray_background" />

            <ImageView style="@style/imageView.divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small">

                <TextView
                    android:id="@+id/textview_pain_level_title"
                    style="@style/textView"
                    android:layout_alignParentLeft="true"
                    android:text="@string/all_pain_level"
                    android:textSize="@dimen/font_headline" />

                <TextView
                    android:id="@+id/textview_pain_level_number"
                    style="@style/textView"
                    android:layout_alignLeft="@id/textview_pain_level_title"
                    android:layout_alignRight="@id/textview_pain_level_title"
                    android:layout_below="@+id/textview_pain_level_title"
                    android:gravity="center_horizontal"
                    android:includeFontPadding="false"
                    android:text="5"
                    android:textSize="@dimen/font_display2" />

                <TextView
                    style="@style/textView"
                    android:layout_alignBottom="@id/textview_pain_level_title"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/textview_pain_level_title"
                    android:gravity="center_vertical"
                    android:text="@string/log_pain_hows_your_pain"
                    android:textColor="#FF707075" />


            </RelativeLayout>

            <SeekBar
                android:id="@+id/seekbar_log_pain_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_small"
                android:max="10"
                android:thumb="@drawable/thumb_image"
                android:thumbOffset="5dip"
                android:progressTint="#0F9AD5"
                android:theme="@style/switchThemeBlue"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small">

                <TextView
                    style="@style/textView.light_gray"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_between_field"
                    android:text="0"
                    android:textSize="@dimen/font_small" />

                <TextView
                    style="@style/textView.light_gray"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_between_field"
                    android:text="10"
                    android:textSize="@dimen/font_small" />
            </RelativeLayout>

            <ImageView style="@style/imageView.divider" />


            <TextView
                style="@style/textView.light_gray.section_header"
                android:paddingBottom="0dp"
                android:paddingTop="@dimen/margin_small"
                android:text="@string/all_medication" />

            <TextView
                style="@style/textView.light_gray.section_header"
                android:paddingBottom="@dimen/margin_small"
                android:paddingTop="0dp"
                android:text="Did you take your medication today?"
                android:textAllCaps="false"
                android:textSize="@dimen/font_caption" />

            <ImageView style="@style/imageView.divider" />

            <RelativeLayout
                android:id="@+id/layout_log_pain_med1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textview_log_pain_med1"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="Asprin"
                    android:textSize="@dimen/font_extra_big" />

                <!--<Switch-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:showText="true"-->
                <!--android:textOff="N"-->
                <!--android:textOn="Y"-->
                <!--android:theme="@style/switchThemeBlue"-->
                <!--android:background="@drawable/selector_yn_switch"/>-->

                <CheckBox
                    android:id="@+id/checkbox_log_pain_med1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@drawable/selector_yn_switch" />
            </RelativeLayout>

            <ImageView style="@style/imageView.divider" />

            <RelativeLayout
                android:id="@+id/layout_log_pain_med2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textview_log_pain_med2"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Naproxen"
                    android:textSize="@dimen/font_extra_big" />

                <!--<Switch-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:showText="true"-->
                <!--android:textOff="N"-->
                <!--android:textOn="Y"-->
                <!--android:theme="@style/switchThemeBlue" />-->


                <CheckBox
                    android:id="@+id/checkbox_log_pain_med2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@drawable/selector_yn_switch"/>
            </RelativeLayout>

            <ImageView style="@style/imageView.divider" />


            <RelativeLayout
                android:id="@+id/layout_log_pain_med3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textview_log_pain_med3"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Naproxen"
                    android:textSize="@dimen/font_extra_big" />

                <!--<Switch-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:showText="true"-->
                <!--android:textOff="N"-->
                <!--android:textOn="Y"-->
                <!--android:theme="@style/switchThemeBlue" />-->


                <CheckBox
                    android:id="@+id/checkbox_log_pain_med3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@drawable/selector_yn_switch"/>
            </RelativeLayout>

            <ImageView style="@style/imageView.divider" />

            <TextView
                style="@style/textView.light_gray.section_header"
                android:paddingBottom="0dp"
                android:paddingTop="@dimen/margin_small"
                android:text="Therapies" />

            <TextView
                style="@style/textView.light_gray.section_header"
                android:paddingBottom="@dimen/margin_small"
                android:paddingTop="0dp"
                android:text="Did you complete your therapy?"
                android:textAllCaps="false"
                android:textSize="@dimen/font_caption" />

            <ImageView style="@style/imageView.divider" />

            <RelativeLayout
                android:id="@+id/layout_log_pain_therapy1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textview_log_pain_therapy1"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Ice"
                    android:textSize="@dimen/font_extra_big" />

                <!--<Switch-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:showText="true"-->
                <!--android:textOff="N"-->
                <!--android:textOn="Y"-->
                <!--android:theme="@style/switchThemeBlue" />-->

                <CheckBox
                    android:id="@+id/checkbox_therapy1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@drawable/selector_yn_switch"/>
            </RelativeLayout>

            <ImageView style="@style/imageView.divider" />

            <RelativeLayout
                android:id="@+id/layout_log_pain_therapy2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textview_log_pain_therapy2"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Willow Bark"
                    android:textSize="@dimen/font_extra_big" />

                <!--<Switch-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:showText="true"-->
                <!--android:textOff="N"-->
                <!--android:textOn="Y"-->
                <!--android:theme="@style/switchThemeBlue" />-->

                <CheckBox
                    android:id="@+id/checkbox_therapy2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@drawable/selector_yn_switch"/>
            </RelativeLayout>

            <ImageView style="@style/imageView.divider" />

            <RelativeLayout
                android:id="@+id/layout_log_pain_therapy3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textview_log_pain_therapy3"
                    style="@style/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Willow Bark"
                    android:textSize="@dimen/font_extra_big" />

                <!--<Switch-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:showText="true"-->
                <!--android:textOff="N"-->
                <!--android:textOn="Y"-->
                <!--android:theme="@style/switchThemeBlue" />-->

                <CheckBox
                    android:id="@+id/checkbox_therapy3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@drawable/selector_yn_switch"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>